<Window x:Class="WpfClientShop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Background="#FF6200EE">
            <TextBlock Text="Меню" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
            <Button Content="Товары" Margin="0,5" Background="#FF3700B3" Foreground="White" Command="{Binding HomeCommand}"/>
            <Button Content="Корзина" Margin="0,5" Background="#FF3700B3" Foreground="White" Command="{Binding CartCommand}" />
            <Button Content="Личный кабинет" Margin="0,5" Background="#FF3700B3" Foreground="White" Command="{Binding AccountCommand}" />
            <Button Content="Контакты" Margin="0,5" Background="#FF3700B3" Foreground="White"/>
            <Button Content="О нас" Margin="0,5" Background="#FF3700B3" Foreground="White"/>
        </StackPanel>

        <ContentControl x:Name="MainContentControl" Grid.Column="1">
        </ContentControl>
    </Grid>
</Window>
