<Window x:Class="WpfClientShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox  Width="200" Margin="0,0,0,10" />

            <ComboBox  Width="200" Margin="0,0,0,10" ItemsSource="{Binding Brands}" DisplayMemberPath="Title"/>

            <ComboBox Width="200" Margin="0,0,0,10" ItemsSource="{Binding TypesList}" DisplayMemberPath="Title"/>


            <ComboBox Width="200" Margin="0,0,0,10" >
                <ComboBoxItem Content="Все размеры" Tag="0"/>
                <ComboBoxItem Content="39" Tag="39"/>
                <ComboBoxItem Content="40" Tag="40"/>
                <ComboBoxItem Content="41" Tag="41"/>
            </ComboBox>

            <ListView Name="ProductListView" ItemsSource="{Binding Products}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="300"/>
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="100"/>
                        <GridViewColumn Header="Type ID" DisplayMemberBinding="{Binding TypeId}" Width="75"/>
                        <GridViewColumn Header="Brand ID" DisplayMemberBinding="{Binding BrandId}" Width="75"/>
                        <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" Width="75"/>
                        <GridViewColumn Header="Time Bought" DisplayMemberBinding="{Binding TimeBought}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
