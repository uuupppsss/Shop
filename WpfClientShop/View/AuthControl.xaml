<UserControl x:Class="WpfClientShop.View.AuthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClientShop.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Авторизация" Margin="10" Click="SignInClick"/>
            <Button Content="Регистрация" Margin="10" Click="SignUpClick"/>
        </StackPanel>

        <ContentControl x:Name="MainContentControl" Grid.Row="1">
        </ContentControl>
    </Grid>
</UserControl>
